<Page x:Class="Konti.Pages.SingIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Konti.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SingIn">

    <Grid Background="#FFE4E1"
         >
        <StackPanel  VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Width ="300"
          Height="125">
            <TextBlock Text="Login"></TextBlock>
            <TextBox Name="TxbLogin"></TextBox>
            <TextBlock Text="Password"></TextBlock>
            <TextBox Name="TxbPassword"></TextBox>
            <Button Name ="BtnSing" Height="20" Margin="5" Content="Sign In" Click="BtnSing_Click"></Button>
            <Button Name ="BtnReg" Height="20" Margin="5" Content="Registration" Click="BtnReg_Click" ></Button>
        </StackPanel>
    </Grid>
</Page>
